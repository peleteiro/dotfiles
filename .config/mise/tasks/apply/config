#!/bin/bash
# Task: Configure operating system (macOS or Linux)
# Usage: mise run apply:config

set -e

OS=$(uname)

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${BLUE}▶${NC} Configuring operating system..."

if [[ "$OS" == "Darwin" ]]; then
  if "$MISE_CONFIG_ROOT/bin/apply-config-macos"; then
    echo -e "${GREEN}✅${NC} macOS configuration completed"
    echo ""
  else
    echo -e "${RED}❌${NC} macOS configuration failed"
    exit 1
  fi
else
  if "$MISE_CONFIG_ROOT/bin/apply-config-linux"; then
    echo -e "${GREEN}✅${NC} Linux configuration completed"
    echo ""
  else
    echo -e "${RED}❌${NC} Linux configuration failed"
    exit 1
  fi
fi

