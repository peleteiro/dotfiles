#!/bin/bash
# Task: Install packages and applications
# Usage: mise run apply:install

set -e

OS=$(uname)

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${BLUE}▶${NC} Installing packages and applications..."

if [[ "$OS" == "Darwin" ]]; then
  if "$MISE_CONFIG_ROOT/bin/apply-install-macos"; then
    echo -e "${GREEN}✅${NC} macOS packages installation completed"
    echo ""
  else
    echo -e "${RED}❌${NC} macOS packages installation failed"
    exit 1
  fi
else
  if "$MISE_CONFIG_ROOT/bin/apply-install-linux"; then
    echo -e "${GREEN}✅${NC} Linux packages installation completed"
    echo ""
  else
    echo -e "${RED}❌${NC} Linux packages installation failed"
    exit 1
  fi
fi

