#!/bin/bash

# install homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/opt/homebrew/bin/brew shellenv)"

# Update homebrew
brew install git
brew update
brew upgrade

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
awscli \
bash \
bash-completion \
bat \
colordiff \
coreutils \
direnv \
exiftool \
git-extras \
gnu-sed \
gpg \
graphicsmagick \
gron \
hashdeep \
imagemagick \
jpegoptim \
jq \
moreutils \
openssl \
pip-completion \
pngcrush \
ripgrep \
sqlite \
ssh-copy-id \
tree \
wget \
z \
zlib \
zopfli \

# asdf
git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.9.0
. $HOME/.asdf/asdf.sh
. $HOME/.asdf/completions/asdf.bash
asdf plugin-add nodejs
bash ~/.asdf/plugins/nodejs/bin/import-release-team-keyring
asdf plugin add awscli
asdf plugin-add flutter
asdf plugin-add golang
asdf plugin-add java
asdf plugin-add jq
asdf plugin-add python
asdf plugin-add ruby
asdf plugin-add rust
asdf plugin-add terraform

# install "out of appstore" apps
brew install --cask docker
brew install --cask droplr
brew install --cask firefox
brew install --cask google-drive
brew install --cask google-chrome
brew install --cask hammerspoon
brew install --cask iconjar
brew install --cask intellij-idea
brew install --cask iterm2
brew install --cask spotify
brew install --cask sublime-text
brew install --cask sublime-merge
brew install --cask the-unarchiver
brew install --cask transmit
brew install --cask visual-studio-code
brew install --cask vlc

# install appstore apps
echo "ðŸ’¿ 1Password" && mas install 1333542190
echo "ðŸ’¿ Affinity Designer" && mas install 824171161
echo "ðŸ’¿ Amphetamine" && mas install 937984704
echo "ðŸ’¿ Capto" && mas install 1078184147
echo "ðŸ’¿ DaisyDisk" && mas install 411643860
echo "ðŸ’¿ Monodraw" && mas install 920404675
echo "ðŸ’¿ Pixelmator Pro" && mas install 1289583905
echo "ðŸ’¿ Slack" && mas install 803453959
echo "ðŸ’¿ Tweetbot 3" && mas install 1384080005
echo "ðŸ’¿ xScope 4" && mas install 889428659


# Android-SDK
brew install openjdk
sudo ln -sfn /opt/homebrew/opt/openjdk/libexec/openjdk.jdk /Library/Java/JavaVirtualMachines/openjdk.jdk
curl -o /tmp/commandlinetools.zip https://dl.google.com/android/repository/commandlinetools-mac-6858069_latest.zip
rm -rf /tmp/commandlinetools-tmp-unzip
mkdir -p /tmp/commandlinetools-tmp-unzip
unzip -n /tmp/commandlinetools.zip -d /tmp/commandlinetools-tmp-unzip
mkdir -p ~/.local/share/android #/cmdline-tools
cd $HOME/.local/share/android && /tmp/commandlinetools-tmp-unzip/cmdline-tools/bin/sdkmanager --install "cmdline-tools;latest" --sdk_root=$HOME/.local/share/android
rm -rf /tmp/commandlinetools-tmp-unzip
rm /tmp/commandlinetools.zip
