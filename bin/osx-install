#!/bin/bash

# install homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
eval "$(/opt/homebrew/bin/brew shellenv)"

# Update homebrew
brew install git
brew update
brew upgrade

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
awscli \
bash \
bash-completion \
bat \
colordiff \
coreutils \
direnv \
docker-completion \
docker-compose \
exiftool \
git-extras \
gnu-sed \
gpg \
graphicsmagick \
gron \
hashdeep \
imagemagick \
jpegoptim \
jq \
just \
moreutils \
openssl \
pip-completion \
pngcrush \
ripgrep \
rnr \
sd \
sqlite \
ssh-copy-id \
tree \
wget \
z \
zlib \
zopfli \

# asdf
brew install asdf
export ASDF_DIR="$HOME/.asdf"
export PATH="$ASDF_DIR/bin:$ASDF_DIR/shims:$PATH"

asdf plugin-add nodejs
bash ~/.asdf/plugins/nodejs/bin/import-release-team-keyring
asdf plugin add awscli
asdf plugin-add flutter
asdf plugin-add golang
asdf plugin-add java
asdf plugin-add jq
asdf plugin-add python
asdf plugin-add ruby
asdf plugin-add rust
asdf plugin-add terraform

asdf global java system

# install "out of appstore" apps
brew install --cask 1password
brew install --cask docker
brew install --cask dropbox
brew install --cask droplr
brew install --cask firefox
brew install --cask google-chrome
brew install --cask google-drive
brew install --cask hammerspoon
brew install --cask iconjar
brew install --cask intellij-idea
brew install --cask iterm2
brew install --cask obsidian
brew install --cask parallels
brew install --cask spotify
brew install --cask sublime-merge
brew install --cask sublime-text
brew install --cask tableplus
brew install --cask the-unarchiver
brew install --cask transmit
brew install --cask visual-studio-code
brew install --cask vlc

# install appstore apps
echo "ðŸ’¿ Amphetamine" && mas install 937984704
echo "ðŸ’¿ Apple Developer" && mas install 640199958
echo "ðŸ’¿ Audio Lock" && mas install 1460671099
echo "ðŸ’¿ Brother P Touch Editor" && mas install 1453365242
echo "ðŸ’¿ Capto" && mas install 1078184147
echo "ðŸ’¿ Colorsnapper 2" && mas install 969418666
echo "ðŸ’¿ DaisyDisk" && mas install 411643860
echo "ðŸ’¿ Dato" && mas install 1470584107
echo "ðŸ’¿ HTTPBot" && mas install 1232603544
echo "ðŸ’¿ iQR Codes - QRCode Maker" && mas install 491390884
echo "ðŸ’¿ KeepSolid VPN" && mas install 694633015
echo "ðŸ’¿ Microsoft Remote Desktop" && mas install 1295203466
echo "ðŸ’¿ MockSMTP" && mas install 423535515
echo "ðŸ’¿ Monodraw" && mas install 920404675
echo "ðŸ’¿ Pastel" && mas install 413897608
