#!/bin/bash

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Update homebrew
brew install git
brew update
brew upgrade

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
awscli \
bash \
bash-completion \
bat \
cocoapods \
colordiff \
coreutils \
direnv \
docker-completion \
