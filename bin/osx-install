echo "ðŸ’¿  Cardhop" && mas install 1290358394
echo "ðŸ’¿  ColorSnapper2" && mas install 969418666
echo "ðŸ’¿  Converto - The Unit Converter" && mas install 576421334
echo "ðŸ’¿  DaisyDisk" && mas install 411643860
echo "ðŸ’¿  Fantastical 2" && mas install 975937182
echo "ðŸ’¿  Hyper 3" && mas install 685096913
echo "ðŸ’¿  Icon Slate" && mas install 439697913
echo "ðŸ’¿  Kaleidoscope" && mas install 587512244
echo "ðŸ’¿  LastPass" && mas install 926036361
echo "ðŸ’¿  MockSMTP" && mas install 423535515
echo "ðŸ’¿  Monodraw" && mas install 920404675
echo "ðŸ’¿  Orion Label Maker" && mas install 994189084
