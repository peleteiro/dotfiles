#!/bin/bash

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Update homebrew
brew install bash-completion git
brew update
brew upgrade

# install homebrew cask
brew tap caskroom/cask

# install mas
brew install mas

# install essentials
