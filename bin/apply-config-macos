#!/bin/bash
# macOS system configuration script
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

# Authenticate once for all sudo commands
# This will prompt for password/Touch ID once and cache it for subsequent sudo commands
echo "üîê Authenticating for system configuration..."
sudo -v

# Keep sudo timestamp fresh (runs in background)
# This prevents sudo from asking for password again during script execution
SUDO_KEEPALIVE_PID=""
(
  while true; do
    sudo -n true
    sleep 60
    kill -0 "$$" 2>/dev/null || exit
  done
) 2>/dev/null &
SUDO_KEEPALIVE_PID=$!

# Cleanup function to kill background process on exit
cleanup() {
  if [ -n "$SUDO_KEEPALIVE_PID" ]; then
    kill "$SUDO_KEEPALIVE_PID" 2>/dev/null || true
  fi
}
trap cleanup EXIT

# Close any open System Preferences panes, to prevent them from overriding settings we're about to change
osascript -e 'tell application "System Preferences" to quit'

# Install Zsh if not installed (supports Bash and Zsh)
if ! command -v zsh > /dev/null; then
  echo "üì¶ Zsh not found. Installing via Homebrew..."
  if command -v brew > /dev/null; then
    brew install zsh
  else
    echo "‚ö†Ô∏è  Homebrew not found. Zsh will not be installed."
  fi
fi

# Configure default shell: use Homebrew bash if system is using system bash
CURRENT_SHELL=$(dscl . -read /Users/$(whoami) UserShell 2>/dev/null | awk '{print $2}' || echo "$SHELL")
if [ "$CURRENT_SHELL" = "/bin/bash" ]; then
  # Check if Homebrew bash is installed
  if command -v brew > /dev/null 2>&1; then
    BREW_BASH=$(brew --prefix)/bin/bash
    if [ -f "$BREW_BASH" ]; then
      # Check if Homebrew bash is in /etc/shells
      if ! grep -q "$BREW_BASH" /etc/shells; then
        echo "Adding Homebrew bash to /etc/shells..."
        echo "$BREW_BASH" | sudo tee -a /etc/shells > /dev/null
      fi
      echo "üîÑ Switching from system bash to Homebrew bash..."
      chsh -s "$BREW_BASH"
      echo "‚úÖ Default shell changed to Homebrew bash: $BREW_BASH"
      echo "   This will take effect in new terminal sessions."
    else
      echo "‚ö†Ô∏è  Homebrew bash not found. Install it with: brew install bash"
    fi
  else
    echo "‚ö†Ô∏è  Homebrew not found. Cannot switch to Homebrew bash."
  fi
elif command -v brew > /dev/null 2>&1 && [ "$CURRENT_SHELL" = "$(brew --prefix)/bin/bash" ]; then
  echo "‚úÖ Already using Homebrew bash: $CURRENT_SHELL"
else
  echo "‚ÑπÔ∏è  Current shell: $CURRENT_SHELL (not system bash, leaving unchanged)"
fi

# Key bindings
mkdir -p ~/Library/KeyBindings
cp $DIR/macos/DefaultKeyBinding.dict ~/Library/KeyBindings

## Global

# Set computer name (as done via System Preferences ‚Üí Sharing)
# Group commands that may require authentication
echo "‚öôÔ∏è  Configuring system settings..."
scutil --set ComputerName "peleteiro"
scutil --set HostName "peleteiro"
scutil --set LocalHostName "peleteiro"
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string "peleteiro"

# Disable the sound effects on boot
sudo nvram SystemAudioVolume=" "

# Set language and text formats
defaults write NSGlobalDomain AppleLanguages -array "en" "pt"
defaults write NSGlobalDomain AppleLocale -string "pt_BR@currency=BRL"
defaults write NSGlobalDomain AppleMeasurementUnits -string "Centimeters"
defaults write NSGlobalDomain AppleMetricUnits -bool true

# Disable auto-correct
defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool false

# Check for software updates daily, not just once per week
defaults write com.apple.SoftwareUpdate ScheduleFrequency -int 1

# Save screenshots to the desktop
defaults write com.apple.screencapture location -string "$HOME/Desktop"

# Save screenshots in PNG format (other options: BMP, GIF, JPG, PDF, TIFF)
defaults write com.apple.screencapture type -string "png"


## App Store

# Enable Mac App Store automatic updates
defaults write com.apple.SoftwareUpdate AutomaticCheckEnabled -bool true

# Check for Mac App Store updates daily
defaults write com.apple.SoftwareUpdate ScheduleFrequency -int 1

# Download Mac App Store updates in the background
defaults write com.apple.SoftwareUpdate AutomaticDownload -int 1

# Install Mac App Store system data files & security updates
defaults write com.apple.SoftwareUpdate CriticalUpdateInstall -int 1

# Turn on Mac App Store auto-update
defaults write com.apple.commerce AutoUpdate -bool true


## Keyboard

# Disable press-and-hold for keys in favor of key repeat
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false

# Set a blazingly fast keyboard repeat rate
defaults write NSGlobalDomain KeyRepeat -int 1

# Set a shorter Delay until key repeat
defaults write NSGlobalDomain InitialKeyRepeat -int 25


## Trackpad

# Enable tap to click for this user and for the login screen
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool true
defaults write NSGlobalDomain com.apple.mouse.tapBehavior -int 1
defaults -currentHost write NSGlobalDomain com.apple.mouse.tapBehavior -int 1

# Secondary click
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadRightClick -bool true
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadTwoFingerDoubleTapGesture -int 1

defaults -currentHost write NSGlobalDomain com.apple.trackpad.enableSecondaryClick -bool true


## Finder

# Set default Finder location to home folder (~/)
defaults write com.apple.finder NewWindowTarget -string "PfLo" && \
defaults write com.apple.finder NewWindowTargetPath -string "file://${HOME}"

# Expand save panel by default
defaults write NSGlobalDomain NSNavPanelExpandedStateForSaveMode -bool true

# Show all filename extensions
defaults write NSGlobalDomain AppleShowAllExtensions -bool true

# Disable ext change warning
defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false

# Use current directory as default search scope in Finder
defaults write com.apple.finder FXDefaultSearchScope -string "SCcf"

# Show Path bar in Finder
defaults write com.apple.finder ShowPathbar -bool true

# Show Status bar in Finder
defaults write com.apple.finder ShowStatusBar -bool true

# DO NOT show icons for hard drives, servers, and removable media on the desktop
defaults write com.apple.finder ShowExternalHardDrivesOnDesktop -bool false && \
defaults write com.apple.finder ShowHardDrivesOnDesktop -bool false && \
defaults write com.apple.finder ShowMountedServersOnDesktop -bool false && \
defaults write com.apple.finder ShowRemovableMediaOnDesktop -bool false

# Avoid creating .DS_Store files on network volumes
defaults write com.apple.desktopservices DSDontWriteNetworkStores -bool true

# Show the ~/Library folder
chflags nohidden ~/Library

# Setup GPG key from 1Password
if [ -f "$DIR/bin/apply-config-gpg" ]; then
  "$DIR/bin/apply-config-gpg"
fi

# Show absolute path in finder's title bar.
defaults write com.apple.finder _FXShowPosixPathInTitle -bool YES

# Auto-play videos when opened with QuickTime Player
defaults write com.apple.QuickTimePlayerX MGPlayMovieOnOpen 1

# Enable AirDrop over Ethernet and on unsupported Macs
defaults write com.apple.NetworkBrowser BrowseAllInterfaces -bool true


## Time Machine

# Prevent Time Machine from prompting to use new hard drives as backup volume
defaults write com.apple.TimeMachine DoNotOfferNewDisksForBackup -bool true
