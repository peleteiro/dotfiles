#!/bin/bash

# install homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Update homebrew
brew install bash-completion git
brew update
brew upgrade

# install homebrew cask
brew tap caskroom/cask

# install homebrew bash-completion
brew tap homebrew/completions

# install mas
brew install mas

# install essentials
brew install \
aria2 \
autoconf \
automake \
colordiff \
direnv \
docker-completion \
docker-compose-completion \
exiftool \
graphicsmagick \
imagemagick \
jpegoptim \
openssl \
packer \
packer-completion \
pip-completion \
pngcrush \
sqlite \
ssh-copy-id \
terraform \
the_platinum_searcher \
tree \
wget \
z \
zopfli \


# install "out of appstore" apps
brew cask install \
atom \
droplr \
firefox \
github-desktop \
google-chrome \
google-drive \
hammerspoon \
iterm2 \
kodi \
macvim \
microsoft-office \
netspot \
notational-velocity \
sketch \
slack \
spotify \
the-unarchiver \
transmission \
vlc \
winbox \

