# Zsh functions

# Function to navigate to project root directory
function proj() {
  [ `pwd` == '/' ] && return
  [ -e .editorconfig ] && return
  [ -e .git ] && return

  cd ..
  proj
}

# Function to use specific Java version (macOS)
function java_use() {
  if [[ "$OS" == "osx" ]]; then
    export JAVA_HOME=$(/usr/libexec/java_home -v $1)
    export PATH=$JAVA_HOME/bin:$PATH
    java -version
  else
    echo "java_use is only available on macOS"
  fi
}

